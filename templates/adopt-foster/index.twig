{# Adopt Foster Page
{# --------------------------------- #}

{% extends '_layouts/default' %}

{% block feature %}
  <div class="bg-gradient-to-b from-brand-peach-dark to-white relative h-96 md:h-[480px] 2xl:h-[540px]">
    <div class="absolute flex items-center justify-center inset-0">
      <div class="max-w-xl text-center px-4 text-green-800">
        <h1 class="font-bold text-4xl md:text-6xl">
          {{ entry.title }}
        </h1>
        <p class="mt-6 text-lg md:text-xl leading-relaxed">
          Whether you are looking for a dog, cat, barn cat or small animal NSPCA
          has many option and the resources to pair you with your new best
          friend.
        </p>
      </div>
      <div class="p-6 absolute bottom-0 left-0 right-0">
        <ul class="max-w-2xl mx-auto flex space-x-4">
          <li class="w-1/3">
            <button class="w-full rounded shadow bg-white h-12 flex items-center justify-center md:text-xl font-bold animal-toggle js-toggle is-active"
              data-toggle="all">
              All
            </button>
          </li>
          <li class="w-1/3">
            <button class="w-full rounded shadow bg-white h-12 flex items-center justify-center md:text-xl font-bold animal-toggle js-toggle"
              data-toggle="cat">
              Cats
            </button>
          </li>
          <li class="w-1/3">
            <button class="w-full rounded shadow bg-white h-12 flex items-center justify-center md:text-xl font-bold animal-toggle js-toggle"
              data-toggle="dog">
              Dogs
            </button>
          </li>
          <li class="w-1/3">
            <button class="w-full rounded shadow bg-white h-12 flex items-center justify-center md:text-xl font-bold animal-toggle js-toggle"
              data-toggle="other-animal">
              Others
            </button>
          </li>
        </ul>
      </div>
    </div>
  </div>
{% endblock %}

{% block content %}
  {% import '_macros/animals' as animals %}
  <div>
    <div class="px-4 max-w-screen-2xl mx-auto py-6 md:py-16">
      <div>
        {{ animals.getAnimals('', null, 'date-desc') }}
      </div>
    </div>
  </div>
{% endblock %}

{% block footInsert %}
  {{ craft.vite.script('/src/js/pages/adopt-foster.js') }}
{% endblock %}
