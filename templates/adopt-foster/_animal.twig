{% extends '_layouts/default' %}

{% set category = craft.categories.group('topics').slug(slug).one() %}

{% block content %}
  {% import '_macros/animals' as animals %}

  <div class="mx-auto w-full max-w-screen-2xl px-4 py-12 md:py-20">
    <div class="text-center">
      <h1>
        <span class="text-3xl md:text-5xl font-bold">{{ category.title }}</span>
      </h1>
    </div>
    <div class="mt-10">
      {{ animals.getAnimals(slug, null, 'date-asc') }}
    </div>
  </div>
{% endblock %}
