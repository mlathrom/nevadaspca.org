{# Adopt Foster Page
{# --------------------------------- #}

{% extends '_layouts/default' %}

{% set animal = craft.shelterManager.animals()|filter (v => v.id == slug)|first %}

{% block feature %}
  <div class="bg-gradient-to-br from-brand-peach-dark to-white relative py-4 md:py-8 px-4">
    <div class="max-w-screen-xl md:flex items-center justify-center inset-0 mx-auto">
      <div class="w-full md:w-96 flex-shrink-0 self-start">
        <div class="w-full h-0 pb-[85%] relative">
          {% if animal.image != '' %}
            <img src="{{ animal.image }}"
              alt=""
              class="absolute top-0 left-0 h-full w-full object-cover rounded-lg block" />
          {% endif %}
        </div>
      </div> 
      <div class="md:pl-10 text-green-800 flex-grow mt-8 md:mt-0">
        <h1 class="font-bold text-3xl md:text-5xl">{{ animal.name }} <small class="text-3xl opacity-40"> {{ animal.species }}</small></h1>
        <p class="mt-4 md:mt-6 leading-relaxed">
          {{ animal.comments }}
        </p>
      </div>
    </div>
  </div>
{% endblock %}

{% block content %}
  <div>
    <div class="px-4 max-w-screen-xl mx-auto py-10 text-center">
      <h2 class="text-3xl font-bold">Schedule an Appointment</h2>
      <div class="-mx-3 mt-4">
        <iframe src="https://booking.appointy.com/PetPantryNSPCA/?isGadget=1" width="100%" height="800px" scrolling="auto" frameborder="0" allowtransparency="true" sandbox="allow-forms allow-scripts allow-same-origin allow-popups"></iframe>
      </div>
    </div>
  </div>
{% endblock %}

{% block footInsert %}
  {{ craft.vite.script('/src/js/pages/adopt-foster.js') }}
{% endblock %}
