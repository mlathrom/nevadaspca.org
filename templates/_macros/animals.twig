
{%- macro getAnimals(species) -%}
  {% set allAnimals = craft.shelterManager.animals() %}
  
  {% switch species %}
    {% case 'dogs' %}
      {% set animals = allAnimals|filter(v => v.species == 'Dog') %}
    {% case 'cats' %}
      {% set animals = allAnimals|filter(v => v.species == 'Cat') %}
    {% case 'other' %}
      {% set animals = allAnimals|filter(v => v.species != 'Dog' and v.species != 'Cat') %}
    {% default %}
      {% set animals = allAnimals %}
  {% endswitch %}
  
  <div class="flex flex-wrap -m-4 font-normal">
    {% for animal in animals %}
      <div class="w-1/3 p-4">
        <figure class="w-full pb-[100%] relative bg-gray-300">
          {% if animal.image != '' %}
            <img src="{{ animal.image }}"
              alt=""
              class="h-full w-full absolute top-0 left-0 object-cover" />
          {% endif %}
        </figure>
        <h2 class="text-2xl font-bold">
          {{ animal.name|capitalize }}
        </h2>
        <p>
          {{ animal.comments }}
        </p>
        <p>
          {{ animal.species }}
        </p>
      </div>
    {% endfor %}
  </div>
  
{%- endmacro -%}
